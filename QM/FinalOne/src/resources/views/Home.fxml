<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="520.0" prefWidth="700.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory.controllers.HomeController">
    <children>
        <StackPane>
            <children>

                <VBox maxHeight="-Infinity" maxWidth="-Infinity" alignment="CENTER" spacing="10.0" StackPane.alignment="CENTER">
                    <children>
                        <Label styleClass="slider-title" text="Main Screen"/>
                        <Label styleClass="slider-desc" text="Welcome in The Inventory Management"/>
                    </children>
                    <StackPane.margin>
                        <Insets left="20.0" top="100.0"/>
                    </StackPane.margin>
                </VBox>
            </children>
        </StackPane>
        <HBox alignment="CENTER" spacing="15.0" stylesheets="@../css/home.css" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                      styleClass="cards">
                    <children>
                        <Label styleClass="cards-title" text="Clients"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                      styleClass="cards">
                    <children>
                        <Label styleClass="cards-title" text="Products"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                      styleClass="cards">
                    <children>
                        <Label styleClass="cards-title" text="Orders"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                      styleClass="cards">
                    <children>
                        <Label styleClass="cards-title" text="Supplier"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
