<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" alignment="TOP_CENTER" fillWidth="false" prefHeight="350.0" prefWidth="500.0" spacing="40.0"
      style="-fx-background-color: #FFF;" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="inventory.controllers.LoginController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <children>
                <Label alignment="CENTER" prefWidth="283.0" styleClass="lbl-desc"
                       text="Please Provide Your Information"
                       textAlignment="CENTER" wrapText="true"/>
            </children>
        </VBox>
        <VBox spacing="40.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>

                        <TextField promptText="Username" fx:id="fieldUser" text="ismail"
                                   styleClass="field" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>

                        <PasswordField fx:id="fieldPass" promptText="Password" text="hellohello"
                                       styleClass="field" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <Button onAction="#onLogin" prefHeight="50.0" prefWidth="360.0" styleClass="btn" text="Sign In"/>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" top="40.0"/>
    </padding>
</VBox>
