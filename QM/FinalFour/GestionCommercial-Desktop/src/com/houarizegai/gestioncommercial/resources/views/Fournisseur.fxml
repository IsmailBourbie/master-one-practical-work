<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import java.lang.String?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<!---->

<StackPane fx:id="root" prefHeight="620.0" prefWidth="1300.0" stylesheets="@../css/crud-view.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.houarizegai.gestioncommercial.java.controllers.FournisseurController">
   <children>
      <VBox spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label styleClass="title" text="Gestion Des Fournisseurs" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" spacing="420.0">
               <children>
                  <HBox alignment="TOP_LEFT" spacing="15.0">
                     <children>
                        <TextField fx:id="fieldSearch" promptText="Recherche" styleClass="field-ismail" />
                        <ComboBox fx:id="comboSearchBy" promptText="Recherche Par" styleClass="combo-ismail" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" spacing="15.0">
                     <children>
                        <JFXButton buttonType="RAISED" onAction="#onAdd" text="Nouveau">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-add" />
                           </styleClass></JFXButton>
                        <JFXButton buttonType="RAISED" onAction="#onEdit" text="Modifier">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-edit" />
                           </styleClass>
                        </JFXButton>
                        <JFXButton buttonType="RAISED" onAction="#onDelete" text="Supprimer">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-delete" />
                           </styleClass>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <ScrollPane VBox.vgrow="ALWAYS">
               <content>
                  <JFXTreeTableView fx:id="tableFournisseur" prefHeight="455.0" prefWidth="1610.0" />
               </content>
            </ScrollPane>
         </children>
         <StackPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
